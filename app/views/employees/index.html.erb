<h1>Employees</h1>

<div id="employees">

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Manager</th>
      </tr>
    </thead>
    <tbody>
      <tr is="employees-row"
          v-for="employee in employees"
          :employee="employee">
      </tr>
    </tbody>
  </table>

</div>

<script type="text/xtemplate" id="employee-row">

  <tr>
    <td>{{ employee.name }}</td>
    <td>{{ employee.email}}</td>
    <td>{{ employee.manager }}</td>
  </tr>

</script>
